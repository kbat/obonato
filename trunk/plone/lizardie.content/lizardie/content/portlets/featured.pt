<dl class="portlet portletFeatured"
    i18n:domain="lizardie.content">
  
  <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span>
	  Featured items
        </span>
        <span class="portletTopRight"></span>
  </dt>
  
  <tal:items tal:repeat="item view/featureditems">
    <dd class="portletItem">
<!--	tal:define="oddrow repeat/item/odd;"
	tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'" --> 

<!--      <img tal:define="image item/mainimage"
	   tal:attributes="src string:${image/getURL}/image_thumb; title image/Description" /> -->
      
       <div class="photoAlbumEntry">
	 <a tal:attributes="href item/url" title="">
	   <span class="photoAlbumEntryWrapper">
	     <img tal:define="image item/mainimage"
		  tal:attributes="src string:${image/getURL}/image_thumb; title image/Description" />
	   </span>
	   <span class="photoAlbumEntryTitle" tal:content="item/title" />
	     </a>
	   </div>
    </dd>
  </tal:items>

  
<!-- 
  <dd class="portletItem odd">
    Body text
  </dd>
-->  

  <dd class="portletFooter">
    <span class="portletBottomLeft"></span>
    <span>
      <a href="@@search?SearchableText=featured">all featured items...</a>
    </span>
    <span class="portletBottomRight"></span>
  </dd>
  
</dl>
