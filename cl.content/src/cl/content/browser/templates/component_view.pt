<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="example.conference">
  <body>

    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="main"
		      tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription" tal:content="context/description" />

        <div class="discreet">
          <tal:block condition="context/commit">
            <span i18n:translate="label_commit">Commit:</span>
	    <a tal:attributes="href view/commitURL" tal:content="view/commit" />
          </tal:block>
	  <br/>
	  <tal:block condition="context/headerURL">
	    <span i18n:translate="label_header">Header:</span>
	    <a tal:attributes="href context/headerURL" tal:content="view/header" />
	  </tal:block>
	  <br/>
	  <tal:block condition="context/headerURL">
	    <span i18n:translate="label_implementation">Implementation:</span>
	    <a tal:attributes="href view/cxxURL" tal:content="view/cxx" />
	  </tal:block>
        </div>

        <div tal:replace="structure provider:plone.abovecontentbody" />

	<div tal:content="structure context/text/output|nothing" />

	<div tal:content="view/libTitle" />

	<h3>Instructions to build</h3>
	<pre>
git checkout <span tal:content="view/commit" />
CMake.pl -O
cmake .
make singleItem
singleItem AA</pre>

        <div tal:replace="structure provider:plone.belowcontentbody" />

      </tal:main-macro>
    </metal:main>

  </body>
</html>
